<div class="profile">
    <h1>Profile</h1>

    <div class="row">
        <div class="col s6">
            {{#if user.avatarUrl}}
                <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
            {{else}}
                <img class="avatar" src="/img/defaultAvatar.png" alt="avatar-{{user.name}}">
            {{/if}}
        </div>
        <div class="col s6">
            <p>Your email: <strong>{{user.email}}</strong></p>

            <form action="/profile" method="POST" enctype="multipart/form-data" novalidate>
                <div class="input-field">
                    {{#if nameError}}
                        <input id="name" name="name" type="text" class="validate invalid" required value="{{user.name}}">
                    {{else}}
                        <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                    {{/if}}
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Name cannot be empty"></span>
                </div>

                <div class="input-field">
                    {{#if usernameError}}
                        <input id="username" name="username" type="text" class="validate invalid" required value="{{user.username}}">
                    {{else}}
                        <input id="username" name="username" type="text" class="validate" required value="{{user.username}}">
                    {{/if}}
                    <label for="username">Username</label>
                    <span class="helper-text" data-error="Username cannot be empty"></span>
                </div>

                <div class="file-field input-field">
                    <div class="btn">
                        <span>Avatar</span>
                        <input type="file" name="avatar">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" class="btn">Save</button>
            </form>
        </div>
    </div>
</div>