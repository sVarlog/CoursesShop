<div class="courseEdit">
    <h1>Edit {{course.title}}</h1>

    <div class="coursePreview">
        <span>Image</span>
        <img class="preview" src="/{{course.img}}" alt="">
    </div>

    <form action="/courses/edit" method="POST" enctype="multipart/form-data" novalidate class="course-form">
        <div class="input-field">
            <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
            <label for="title">Course name</label>
            <span class="helper-text" data-error="Enter name"></span>
        </div>

        <div class="input-field">
            <input id="price" name="price" type="number" inputmode="numeric" class="validate" required min="1" value="{{course.price}}">
            <label for="price">Course price</label>
            <span class="helper-text" data-error="Enter price"></span>
        </div>

        <div class="input-field">
            <textarea id="textarea1" name="description" class="materialize-textarea">{{course.desc}}</textarea>
            <label for="textarea1">Course description</label>
        </div>

        <div class="input-field">
            <div class="file-field input-field">
                <div class="btn">
                    <span>File</span>
                    <input name="courseImage" type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload file">
                </div>
            </div>
        </div>

        <input type="hidden" name="id" value="{{course._id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn btn-primary saveBtn">Save</button>
    </form>

    <form action="/courses/remove" method="POST" class="removeForm">
        <h3>You can delete this course</h3>
        <p>This action will permanently delete this material and its contents without the possibility of recovery.</p>
        <input type="hidden" name="id" value="{{course._id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn red">Delete course</button>
    </form>
</div>