<div class="orders">
    <div class="orderWrap">
        <h1>My orders</h1>
        <div class="orderContent">
            {{#if orders.length}}
                <div class="row">
                    {{#each orders}}
                        <div class="orderItem">
                            <div class="card">
                                <div class="card-content">
                                    <span class="card-title">
                                        Order: <small>{{_id}}</small>
                                    </span>
                                    <p class="customDate">{{date}}</p>
                                    <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

                                    <ol>
                                        {{#each courses}}
                                            <li>
                                                {{course.title}} (x<strong>{{count}}</strong>)
                                            </li>
                                        {{/each}}
                                    </ol>

                                    <hr>

                                    <p>Price: <span class="price">{{price}}</span></p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>No orders yet...</p>
            {{/if}}
        </div>
    </div>

    {{#if courses.length}}
        <div class="latestCourses">
            <h2>Our latest courses</h2>
            {{> courseList}}
        </div>
    {{else}}

    {{/if}}
</div>